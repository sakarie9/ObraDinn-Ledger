---
import { ClientRouter } from "astro:transitions";
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="《奥伯拉丁的回归》身份与下落提示与查验程序"
    />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, user-scalable=no, viewport-fit=cover"
    />
    <link
      rel="icon"
      type="image/png"
      href={`${import.meta.env.BASE_URL}/icon-192.png`}
    />
    <meta name="generator" content={Astro.generator} />

    <!-- PWA -->
    <meta name="theme-color" content="#333319" />
    <meta
      name="theme-color"
      content="#333319"
      media="(prefers-color-scheme: dark)"
    />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta
      name="apple-mobile-web-app-status-bar-style"
      content="black-translucent"
    />
    <link
      rel="apple-touch-icon"
      href={`${import.meta.env.BASE_URL}/icon-512.png`}
    />
    <link
      rel="manifest"
      href={`${import.meta.env.BASE_URL}/manifest.webmanifest`}
    />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <!-- display=swap: ensures document.fonts.load() reliably waits for all woff2 subsets;
         combined with JS font preloading, all subsets download before content renders -->
    <link
      href="https://fonts.googleapis.com/css2?family=Crimson+Text:wght@400;600&family=Ma+Shan+Zheng&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
    <ClientRouter />
    <script src="/src/pwa.ts"></script>
  </head>
  <body>
    <div id="app-container" class="w-full max-w-[1200px] p-5">
      <slot />
    </div>
  </body>
</html>
